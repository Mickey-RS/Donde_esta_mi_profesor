<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>¡Inicia Sesión!</h3>
                </div>
                <div class="card-body mx-auto">
                    <div class="row">
                        <img src="img/Login.png" alt="Iniciar Sesión" height="200px" width="200px">
                        <form action="/ingresar" method="POST" class="pl-4">
                            <div class="form-group custom-switch">
                                <input type="checkbox" class="custom-control-input" id="switch1" name="TipoProf">
                                <label class="custom-control-label" for="switch1">Ingresar como Profesor</label>
                            </div>
                            <div class="form-group">
                                <input type="email" name="mail" placeholder="e-mail" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" placeholder="Contraseña" class="form-control">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block">Ingresar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>